{
   "image": "tevity/dev:angular-latest",
   "forwardPorts": [
      4200
   ],
   "mounts": [
      "target=${containerWorkspaceFolder}/node_modules,type=volume"
   ],
   "extensions": [
      "esbenp.prettier-vscode",
      "dbaeumer.vscode-eslint",
	  "ms-azuretools.vscode-docker",
	  "redhat.vscode-yaml"
   ],
   "containerEnv": {
      "NODE_ENV": "local"
   },
   "remoteUser": "node",
   "postCreateCommand": "echo node | sudo -S chown node ${containerWorkspaceFolder}/node_modules"
}