{
   "image": "tevity/dev:nest-latest",
   "forwardPorts": [
      8080
   ],
   "mounts": [
      "target=${containerWorkspaceFolder}/node_modules,type=volume",
      "source=~/dev/bcb/gcloud-auth,target=/home/vscode/.config/gcloud,type=bind,consistency=cached"
   ],
   "extensions": [
      "esbenp.prettier-vscode",
      "dbaeumer.vscode-eslint",
      "ms-azuretools.vscode-docker",
      "redhat.vscode-yaml",
      "streetsidesoftware.code-spell-checker",
      "eamodio.gitlens",
      "oderwat.indent-rainbow"
   ],
   "containerEnv": {
      "NODE_ENV": "local"
   },
	"remoteUser": "vscode",
   "postCreateCommand": "echo vscode | sudo -S chown vscode ${containerWorkspaceFolder} -R"
}